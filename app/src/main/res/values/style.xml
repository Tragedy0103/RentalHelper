<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PopupMenuStyle"
        parent="Widget.AppCompat.PopupMenu">
        <item name="android:background">@android:color/darker_gray</item>
    </style>
    <style name="TextStyle">
    </style>
    <style name="SpinnerItem">
        <item name="android:foreground">@drawable/ripple_effect</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/spinner_item_background</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:radius">10dp</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="InputLayout" parent="@android:style/TextAppearance">
        <item name="colorControlHighlight">@color/ButtonColor</item>
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/ButtonColor</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="android:textColor">@color/ButtonColor</item>
        <item name="colorAccent">@color/ButtonColor</item>
        <item name="colorControlNormal">@color/ButtonColor</item>
        <item name="colorControlActivated">@color/ButtonColor</item>
    </style>
    <style name="Theme.App.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorHint">@color/EditTextHintColor</item>
        <item name="colorControlNormal">@color/EditTextHintColor</item>
        <item name="colorControlActivated">@color/ButtonColor</item>
        <item name="colorControlHighlight">@color/ButtonColor</item>
        <item name="android:textColor">@color/EditTextColor</item>
    </style>
    <style name="CardBase" parent="Base.CardView">
        <item name="cornerRadius">5dp</item>
        <item name="cardElevation">1dp</item>
    </style>
    <style name="TabTextStyle">
        <item name="android:background">@drawable/tv_bg_corner_radius</item>
        <item name="android:paddingStart">3dp</item>
        <item name="android:paddingEnd">3dp</item>
        <item name="android:textColor">@color/TextMajorColor</item>
    </style>
</resources>